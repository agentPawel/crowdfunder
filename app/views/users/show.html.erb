<h1>This is <%= @user.first_name %>'s page </h1>

<h3>My Projects</h3>

<% @projects_owned.each do |project| %>
  <div class="owned_projects">
    Project Title: <%= project.title %><br>
    Description: <%= project.description %><br>
    Goal: <%= project.goal %><br>
    Start Date: <%= project.start_date %><br>
    End Date: <%= project.end_date %><br>
    <br>
  </div>
<% end %>

<h3>My Pledges</h3>

<% @pledges_made.each do |pledge| %>
Project: <%= pledge.project.title %><br>
Pledge Amount: <%= pledge.dollar_amount %><br>
Reward Amount: <%= current_user.rewards.find_by(id: pledge.reward_id).dollar_amount %><br>
Reward Description: <%= current_user.rewards.find_by(id: pledge.reward_id).description %><br>
<br>
<% end %>
